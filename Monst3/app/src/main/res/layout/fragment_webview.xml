<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nine.post.monst.WebviewFragment"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:spb_sections_count="4"
        app:spb_color="#3f79ff"
        app:spb_speed="2.0"
        app:spb_stroke_width="3dp"
        app:spb_stroke_separator_length="0dp"
        app:spb_reversed="false"
        app:spb_mirror_mode="false"
        app:spb_progressiveStart_activated="true"
        app:spb_progressiveStart_speed="6.0"
        app:spb_progressiveStop_speed="3.0"
        />

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/webView1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp"
        />

    <TextView
        android:id="@+id/webview_error_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:text="通信ができないみたいです。。"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/adView"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:showDividers="none"
        android:layout_gravity="center_horizontal|bottom" />

</FrameLayout>
