<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- ボタンのテキストに小文字許可 -->
        <item name="textAllCaps">false</item>

        <!-- 通知バーの色 -->
        <item name="colorPrimaryDark">#FF0000</item>

        <!-- アクションバーカスタマイズ -->
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <!-- アクションバーカスタマイズ -->
    <style name="AppTheme.ActionBarStyle" parent="Widget.AppCompat.ActionBar">

        <!-- テキストカスタマイズ -->
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/AppTheme.ActionBar.subtitleTextStyle</item>

        <!-- アクションバーの色 -->
        <item name="background">@color/background_material_dark</item>
    </style>

    <!-- タイトルの文字サイズ -->
    <style name="AppTheme.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- サブタイトルの文字サイズ -->
    <style name="AppTheme.ActionBar.subtitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">10sp</item>
    </style>

</resources>


